<%- include('./header.ejs') %>
<div class="row g-0">
  <div class="col-6 card shadow mt-4 card-section">
    <div class="col-12 card-header border-0 text-center">
      <h5>Login</h5>
      <% if (err_msg!=undefined) { %>
        <span class="flash_msg text-danger">
         <%= err_msg %> 
        </span>
       <% } %>
       <% if (success_msg!=undefined) { %>
        <span class="flash_msg text-success">
         <%= success_msg %> 
        </span>
       <% } %>
    </div>
    <div class="card-body">
      <div class="row">
        <form action="/submit-login" method="post">
          <div class="col-12 mb-3">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Your Email">
          </div>
          <div class="col-12 mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="********">
          </div>
          <div class="col-12 text-end mb-4">
            <p><a href="/forgot-password" class="text-light">Forgot Password?</a></p>
          </div>
          <div class="col-12 text-center mb-3">
            <button class="col-8 btn border-0 submit-button" type="submit">Log In</button>
          </div>
        </form>
      </div>
      <div class="row text-center">
        <p>
          Don't have an account?<br>
          <button type="button" class="col-4 btn btn-sm border-0 text-decoration-underline" onclick="location.href='/doctor-signup'">For Doctors</button>
          <button type="button" class="col-4 btn btn-sm border-0 text-decoration-underline" onclick="location.href='/patient-signup'">For Patient</button>
        </p>
      </div>
    </div>
  </div>
</div>
<%- include('./footer.ejs') %>
