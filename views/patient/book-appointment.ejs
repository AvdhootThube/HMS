<%- include('./header.ejs')  %>
            </div>            
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
              <div class="card rounded-3">
                <div class="card-header bg-muted">
                  <h3>Book Appointment</h3>
                  <% if(err_msg!=undefined){ %>
                    <span class="flash_msg text-danger">
                      <%= err_msg %>
                    </span>
                <% }%>
                <% if(success_msg!=undefined){ %>
                    <span class="flash_msg text-success" >
                      <%= success_msg %>
                    </span>
                <% }%>
                </div>
                <div class="card-body">
                  <form action="/patient/submit-appointment" method="post">
                    <div class="row mt-3">
                      <div class="col-12">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" id="book_name" name="name" class="form-control" placeholder="Your Full Name" value="<%= session.name %>" required>
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-12">
                        <label for="email" class="form-label">E-mail</label>
                        <input type="email" id="email" name="email" class="form-control" value="<%= session.email %>" readonly>
                      </div>
                    </div>
                    <div class="row mt-3">
                      <div class="col-6">
                        <label for="dateTime" class="form-label">Date/Time</label>
                        <input type="datetime-local" id="check-date" class="form-control" name="dateTime" required>
                      </div>
                      <div class="col-6">
                        <label for="dept" class="form-label">Department</label>
                        <select name="dept" id="dept" class="form-select" required>
                          <option value="#" selected="selected" hidden>Select a Department</option>
                          <option value="Orthopaedic">Orthopaedic</option>
                          <option value="Psychiatric">Psychiatric</option>
                          <option value="ENT">ENT</option>
                          <option value="Gynecologist">Gynecologist</option>
                        </select>
                      </div>
                    </div>
                    <div class="row mt-3">
                      <!-- <div class="col-12"> -->
                        <label for="reason" class="form-label">Reason for visit
                        <textarea id="reason" name="reason" rows="4" class="form-control" required></textarea>
                      <!-- </div> -->
                    </div> 
                    <div class="row mt-4">
                      <div class="col-1">
                        <button type="submit" class="btn submit-btn">Book</button>
                      </div>
                      <div class="col-1">
                        <button type="reset" class="btn btn-secondary border-0">Reset</button>
                      </div>
                    </div> 
                  </form>
                </div>
              </div>
            </main>
          </div>
        </div>
<%- include('./footer.ejs')  %>