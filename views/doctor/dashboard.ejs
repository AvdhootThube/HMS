<%- include('./header.ejs')  %>             
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
                <h3>Upcoming Appointments</h3>
                <% if(err_msg!=undefined){ %>
                    <span class="flash_msg text-danger">
                      <%= err_msg %>
                    </span>
                <% }%>
                <% if(success_msg!=undefined){ %>
                    <span class="flash_msg text-success" >
                      <%= success_msg %>
                    </span>
                <% }%>
                <hr>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Patient Name</th>
                                <th scope="col">Patient Email</th>
                                <th scope="col">Date/Time</th>
                                <th scope="col">Reason to Visit</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (appts.length < 1) { %>
                                <tr>
                                    <td colspan="5">You have no upcoming appointments.</td>
                                </tr>
                            <% } else { %>
                                <% for( let i = 0; i < appts.length; i++ ) { %>
                                    <tr>
                                        <td class="text-truncate" data-toogle="tooltip" data-placement="bottom" title="<%= appts[i].patientName %>"><%= appts[i].patientName %></td>
                                        <td class="text-truncate" data-toogle="tooltip" data-placement="bottom" title="<%= appts[i].patientEmail %>"><%= appts[i].patientEmail %></td>
                                        <td class="text-truncate" data-toogle="tooltip" data-placement="bottom" title="<%= appts[i].dateTime %>"><%= appts[i].dateTime %></td>
                                        <td class="text-truncate" data-toogle="tooltip" data-placement="bottom" title="<%= appts[i].reason %>"><%= appts[i].reason %></td>
                                        <td class="text-end">
                                          <a href="/doctor/cancel-appointment" class="btn btn-sm text-primary" onclick="location.href=this.href+'/'+`<%= appts[i]._id %>`;return false">
                                              <i class="bi bi-x"></i>
                                          </a>
                                        </td>
                                    </tr>
                                <% } %> 
                            <% } %> 
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    </div>
<%- include('./footer.ejs')  %>