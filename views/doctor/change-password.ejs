<%- include('./header.ejs')  %>
<main class="offset-2 col-10 ">
    <div class="mt-n4 pt-8 offset-md-2 col-md-8 offset-md-2 container bg-light border rounded-4">
        <div class="col-md-12">
            <h1 class="display-1"><i class="row justify-content-center bi bi-person-circle"></i></h1>
            <h2 class="row justify-content-center">Change Password</h2>
            <% if(err_msg!=undefined){ %>
                <span class="row justify-content-center error_validate flash_msg text-danger">
                    <%= err_msg %>
                </span>
            <% }%>
            <% if(success_msg!=undefined){ %>
                    <span class="row justify-content-center error_validate flash_msg text-success">
                      <%= success_msg %>
                    </span>
            <% }%>
        </div>
        <div class="col-md-12">
            <form action="/doctor/submit-change-password" method="post" class="pt-4 row g-3 pb-4">
                <div class="col-md-12">
                    <label for="password" class="form-label">Current Password</label>
                    <input type="password" class="form-control pass" name="currentPass" id="password" autocomplete="off">
                </div>
                <div class="col-md-6">
                    <label for="newPassword" class="form-label">New Password</label>
                    <input type="password" class="form-control pass" name="newPassword" id="newPassword" autocomplete="off">
                </div>
                <div class="col-md-6">
                    <label for="confNewPass" class="form-label">Confirm New Password</label>
                    <input type="password" class="form-control pass" name="confNewPass" id="confNewPass" autocomplete="off">
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="showPassword">
                        <label class="form-check-label" for="showPassword">
                            Show Password
                        </label>
                    </div>
                </div>
                <div class="mt-7 col-3">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</main>
<script>
    $(document).ready(function(){
        $('#showPassword').on('click', function(){
           var passInput = $(".pass");
           if ( passInput.attr('type') === 'password' ) {
               passInput.attr('type','text');
           } else {
              passInput.attr('type','password');
           }
       })
     })
</script>
